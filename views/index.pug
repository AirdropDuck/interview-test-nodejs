extends layout

block content
  h1 City #{city}
  form(method='POST', action='/add')
    .form-group
      label City(Choose Once):
      input(type='radio', name='city', id='newyork', value='ny', checked)
      label(for='newyork') New York
      input(type='radio', name='city', id='california', value='ca')
      label(for='california') California
    .form-group
      label Name:
      input.form-control(name='name', type='text')
    .form-group
      label Price:
      input.form-control(name='price', type='text')
    .form-group
      label Quantity:
      input.form-control(name='quantity', type='text')
    br
    input.btn.btn-primary(type='submit', value='Submit')
    table
      thead
        tr
          th name price quantity

        tbody
          each product in products
            tr
              td #{product.name} #{product.price} #{product.quantity}

    label total :
    label= total
    br
    label sale tax :
    label= tax
    br
    label taxTotal :
    label= taxTotal
